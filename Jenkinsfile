pipeline {
    agent any

    stages {
        stage('install-pip-deps') {
            steps {
                echo 'Hello World'
            }
        }
      stage('deploy-to-dev') {
            steps {
                echo 'Hello World'
            }
        }
      stage('tests-on-dev') {
            steps {
                echo 'Hello World'
            }
        }
      stage('deploy-to-staging') {
            steps {
                echo 'Hello World'
            }
        }
      stage('tests-on-preprod') {
            steps {
                echo 'Hello World'
            }
        }
      stage('deploy-to-prod') {
            steps {
                echo 'Hello World'
            }
        }
      stage('tests-on-prod') {
            steps {
                echo 'Hello World'
            }
        }
    }
}
